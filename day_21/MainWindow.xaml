<Window x:Class="day_21.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:day_21"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="100">
        <!-- Grid Definitions -->
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <!-- Row 1 Control (ID) -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:" TextAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
        <TextBox x:Name="textBox_ID" Grid.Row="0" Grid.Column="1" Margin="10" FontSize="30"/>
        
        <!-- Row 2 Control (Password) -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="PW:" TextAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
        <TextBox x:Name="textBox_PW" Grid.Row="1" Grid.Column="1" Margin="10" FontSize="30"/>
        
        <!-- Row 3 Control (Login Button) -->
        <Button Grid.Row="2" Grid.ColumnSpan="2" Content="Login" Margin="10" FontSize="30" Click="Button_Click"/>

    </Grid>
</Window>
